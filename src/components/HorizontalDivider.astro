---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'div'> {
  spacing?: number
}

const { class: className, spacing = 6, ...rest } = Astro.props
---

<div
  class:list={['border-border h-1 w-full border-t', className]}
  style={{ marginBlock: `calc(var(--spacing) * ${spacing})` }}
  {...rest}
>
</div>
