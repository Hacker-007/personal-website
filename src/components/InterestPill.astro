---
import type { HTMLAttributes } from 'astro/types'

type Props = HTMLAttributes<'a'>

const { class: className, href, ...rest } = Astro.props
---

<a
  class:list={[
    'border-border',
    'bg-surface-1',
    'text-muted',
    'cursor-pointer',
    'rounded-full',
    'border',
    'px-3',
    'py-1',
    'text-sm',
    'transition-all',
    'duration-150',
    'hover:border-border-hover',
    'hover:bg-surface-2',
    'hover:text-text',
    className,
  ]}
  href={href}
  {...rest}
>
  <slot />
</a>
