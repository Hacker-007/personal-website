---
interface Props {
  id: string
  title: string
  description: string
  tags: string[]
  children: unknown
}

const { id, title, description, tags } = Astro.props
---

<slot />
<div class="mt-3 space-y-1.5">
  <h3 class="text-text text-sm font-medium">{title}</h3>
  <p class="text-muted text-sm leading-relaxed">{description}</p>
  <div class="flex flex-wrap items-center gap-2">
    {
      tags.map(tag => (
        <span class="bg-surface-2 text-muted rounded-full px-2 py-1 text-xs">
          {tag}
        </span>
      ))
    }
  </div>
  <a
    href={`/projects/${id}`}
    class="group text-accent hover:text-text inline-flex items-center gap-1 text-sm font-medium transition-colors"
  >
    explore
    <span class="inline-block transition-transform group-hover:translate-x-0.5">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="mt-0.5 size-4"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3"></path>
      </svg>
    </span>
  </a>
</div>
