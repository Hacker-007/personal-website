---
import Layout from '../layouts/Layout.astro'

import HorizontalDivider from '../components/HorizontalDivider.astro'
import InterestPill from '../components/InterestPill.astro'
import Link from '../components/Link.astro'
import { RedisTerminal } from '../components/RedisTerminal'
import { EnviousEditor } from '../components/EnviousEditor'
---

<Layout>
  <div class="mx-auto max-w-5xl px-6 py-8">
    <header class="flex items-start justify-between">
      <section>
        <h1 class="text-lg font-semibold tracking-tight">Revanth Pothukuchi</h1>
        <p class="text-muted text-sm">MIT '25, CS</p>
        <div class="mt-2 flex gap-4 text-sm">
          <Link
            aria-label="LinkedIn Page"
            href="https://www.linkedin.com/in/revanthpothukuchi"
          >
            linkedin
          </Link>
          <Link
            aria-label="GitHub Page"
            href="https://www.github.com/Hacker-007"
          >
            github
          </Link>
          <Link aria-label="Email" href="mailto:revanthpothukuchi123@gmail.com">
            email
          </Link>
        </div>
      </section>
      <nav class="flex items-center gap-8 text-sm">
        <Link aria-label="Projects Page" href="/projects">Projects</Link>
        <Link aria-label="Blog Page" href="/blog">Blog</Link>
        <Link aria-label="Resume Page" href="/resume">Resume</Link>
      </nav>
    </header>

    <section class="mt-12 max-w-2xl text-[15px]">
      <h2 class="text-muted leading-relaxed">
        Member of technical staff at Nexus. MIT Class of 2025 with Bachelor's of
        Science in Computer Science. Previously an algorithmic quantitative
        intern at Citi, technical co-founder of a stealth startup, and security
        researcher at MIT CSAIL.
      </h2>
    </section>

    <section class="mt-10">
      <h3 class="text-muted text-xs font-medium tracking-widest uppercase">
        Interests
      </h3>
      <div class="mt-3 flex flex-wrap items-center gap-2">
        <InterestPill href="/projects?tags=compilers">Compiler</InterestPill>
        <InterestPill href="/projects?tags=security">Security</InterestPill>
        <InterestPill href="/projects?tags=distributed-systems">
          Distributed Systems
        </InterestPill>
        <InterestPill href="/projects?tags=performance-engineering">
          Performance Engineering
        </InterestPill>
        <InterestPill href="/projects?tags=ai-ml">AI &amp; ML</InterestPill>
      </div>
    </section>

    <HorizontalDivider />

    <section class="flex items-center justify-between gap-5">
      <RedisTerminal client:load />
      <EnviousEditor client:load />
    </section>
  </div>
</Layout>
