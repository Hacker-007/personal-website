---
import '@fontsource-variable/geist'
import '@fontsource-variable/geist-mono'
import '../styles/global.css'

import Link from '../components/Link.astro'
import MobileNav from '../components/MobileNav.astro'

interface Props {
  withExternalLinks?: boolean
}

const { withExternalLinks = true } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="Revanth Pothukuchi â€” software engineer and builder."
    />
    <meta name="generator" content={Astro.generator} />
    <title>Revanth Pothukuchi</title>
  </head>
  <body class="bg-bg text-text min-h-screen font-sans antialiased">
    <div class="mx-auto max-w-6xl px-6 py-6 md:py-8">
      <header class="flex items-start justify-between">
        <section>
          <h1 class="text-lg font-semibold tracking-tight">
            Revanth Pothukuchi
          </h1>
          <p class="text-muted">MIT '25, CS</p>
          <div
            class:list={['mt-2 hidden gap-4', withExternalLinks && 'md:flex']}
          >
            <Link
              aria-label="LinkedIn"
              href="https://www.linkedin.com/in/revanthpothukuchi"
              rel="external noopener noreferrer"
              target="_blank"
            >
              linkedin
            </Link>
            <Link
              aria-label="GitHub"
              href="https://www.github.com/Hacker-007"
              rel="external noopener noreferrer"
              target="_blank"
            >
              github
            </Link>
            <Link
              aria-label="email"
              href="mailto:revanthpothukuchi123@gmail.com"
              rel="external noopener noreferrer"
              target="_blank"
            >
              email
            </Link>
            <Link
              aria-label="resume"
              href="/resume.pdf"
              download="Revanth Pothukuchi Resume"
            >
              resume
            </Link>
          </div>
        </section>
        <nav class="hidden items-center gap-4 md:flex">
          <Link aria-label="home" href="/">home</Link>
          <Link aria-label="personal projects" href="/projects">projects</Link>
          <Link aria-label="blog" href="/blog">blog</Link>
        </nav>
        <MobileNav />
      </header>
      <slot />
    </div>
  </body>
</html>
